{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2020",
    "noEmitOnError": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}
